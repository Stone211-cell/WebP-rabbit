generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id           String   @id @default(uuid())
  clerkId      String   @unique
  name         String
  email        String
  phone        String
  profileImage String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Store {
  id           String     @id @default(uuid())
  code         String     @unique
  name         String
  owner        String?
  type         String?
  customerType String?
  phone        String?
  address      String?
  productUsed  String?
  quantity     String?
  orderPeriod  String?
  supplier     String?
  payment      String?
  paymentScore String?
  status       String     @default("เปิดการขาย")
  closeReason  String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  forecasts    Forecast[]
  plans        Plan[]
  visitHistory Visit[]
}

model Visit {
  id          String   @id @default(uuid())
  date        DateTime
  sales       String
  storeRef    String?
  masterId    String?
  visitCat    String?
  visitType   String
  dealStatus  String   @default("เปิดการขาย")
  closeReason String?
  notes       Json?
  order       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  store       Store?   @relation(fields: [masterId], references: [id])
}

model Plan {
  id        String   @id @default(uuid())
  date      DateTime
  sales     String
  storeRef  String?
  masterId  String?
  visitCat  String?
  notes     String?
  order     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  store     Store?   @relation(fields: [masterId], references: [id])
}

model Forecast {
  id          String   @id @default(uuid())
  masterId    String
  product     String
  targetWeek  Float
  targetMonth Float
  forecast    Float?
  actual      Float?
  notes       String?
  weekStart   DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  store       Store    @relation(fields: [masterId], references: [id], onDelete: Cascade)

  @@index([weekStart])
  @@index([masterId])
}

model Product {
  id          String   @id @default(uuid())
  code        String   @unique
  name        String
  category    String?
  price       Float    @default(0)
  unit        String?
  description String?
  image       String?
  status      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
